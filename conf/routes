#
# Username Password Controller routes
#
GET     /signup                 UsernamePasswordController.signup
POST    /signup                 UsernamePasswordController.createAccount
GET     /activate/{uuid}        UsernamePasswordController.activate

#
# Change password controller routes
#
GET     /change                 PasswordChangeController.changePassword
POST    /change                 PasswordChangeController.doChange

#
# Reset Password controller routes
#
GET     /reset                  PasswordResetController.resetPassword
POST    /reset                  PasswordResetController.sendEmail

GET     /reset/{username}/{uuid} PasswordResetController.changePassword
#POST    /reset/{username}/{uuid} PasswordResetController.doChange
POST    /reset/execute           PasswordResetController.doChange

#
# Secure Social Controller routes
#
GET     /login                  Application.login
GET     /logout                 Application.logout
GET     /{type}                 Application.authenticate
POST    /p/{type}               Application.authByPost
POST    /p                      Application.authByPost


#
# Static content
#
GET     /public/                staticDir:public

# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
